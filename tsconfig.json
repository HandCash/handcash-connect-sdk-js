{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"lib": ["ES2022", "dom"],
		"moduleResolution": "node",
		"strict": true,
		"emitDeclarationOnly": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"outDir": "dist/types",
	},
	"include": ["src"]
}
