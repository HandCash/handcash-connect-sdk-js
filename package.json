{
	"name": "@handcash/handcash-connect",
	"version": "0.7.7-alpha",
	"description": "HandCash Connect SDK",
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/types/index.d.ts",
				"default": "./dist/index.esm.js"
			},
			"require": {
				"types": "./dist/types/index.d.ts",
				"default": "./dist/index.cjs.js"
			}
		}
	},
	"types": "./dist/types/index.d.ts",
	"main": "dist/index.cjs.js",
	"files": [
		"dist/"
	],
	"scripts": {
		"build": "node build.js && tsc -p tsconfig.json",
		"lint": "eslint . --fix",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"commit": "changeset add",
		"release": "npm run build && changeset publish",
		"prepublishOnly": "npm run build"
	},
	"keywords": [
		"bitcoin",
		"payments",
		"wallet",
		"web3"
	],
	"author": "HandCash Labs S.L",
	"license": "MIT",
	"dependencies": {
		"axios": "1.1.0",
		"bsv-wasm": "2.0.2",
		"esbuild-wasm": "0.19.5",
		"joi": "17.9.2",
		"nanoid": "3.3.4",
		"p-limit": "4.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.0",
		"@types/node": "^20.8.9",
		"@typescript-eslint/eslint-plugin": "^5.57.1",
		"@typescript-eslint/parser": "^5.57.1",
		"@vitest/coverage-c8": "^0.27.1",
		"dotenv": "^16.0.3",
		"esbuild": "^0.19.5",
		"eslint": "^8.32.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-import": "^2.27.4",
		"eslint-plugin-prettier": "^4.2.1",
		"prettier": "^2.8.3",
		"run-sdk": "^0.6.41",
		"vitest": "^0.27.1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/HandCash/handcash-connect-sdk-js.git"
	},
	"bugs": {
		"url": "https://github.com/HandCash/handcash-connect-sdk-js/issues"
	},
	"homepage": "https://github.com/HandCash/handcash-connect-sdk-js#readme"
}
